@model IEnumerable<Uppgifter_IdentityAndSession.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
				<a class="btn btn-primary" asp-controller="cart" asp-action="Add" asp-route-id="@item.ProductId" asp-route-returnurl="/Product">
					<i class="fas fa-shopping-cart"></i>
				</a>
            </td>
        </tr>
}
    </tbody>
</table>

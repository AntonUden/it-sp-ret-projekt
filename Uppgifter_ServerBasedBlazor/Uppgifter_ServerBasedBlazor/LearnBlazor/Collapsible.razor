<div>
	<button class="btn btn-primary" @onclick="ClickEvent">@(Show ? "Collapse" : "Expand")</button>
	<div>
		@if (ChildContent != null && Show)
		{
			@ChildContent
		}
	</div>
</div>


@code {
	[Parameter]
	public RenderFragment ChildContent { get; set; }

	public bool Show = false;

	public void ClickEvent(MouseEventArgs e)
	{
		Show = !Show;
	}
}
